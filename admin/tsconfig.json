// Specialized tsconfig for the admin directory,
{
    "compileOnSave": true,
    "compilerOptions": {
        "esModuleInterop": true,
        // check JS files, but do not compile them => tsconfig.build.json
        "allowJs": true,
        "declaration": true,
        "checkJs": true,

        "skipLibCheck": true, // Don't report errors in 3rd party definitions
        "noEmitOnError": true,
        "removeComments": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,

        "noEmit": true,
        "outDir": "./build",
        "sourceMap": true,
        "sourceRoot": "./src",
        "noImplicitAny": false,
        "lib": ["es2018", "DOM"],
        "jsx": "react",
        "target": "ES6",

        "inlineSourceMap": false,
        "watch": false,

        "experimentalDecorators": true
    },
    "include": ["./**/*.ts", "./**/*.tsx", "../src/lib/adapter-config.d.ts"],
    "exclude": ["./**/*.test.ts", "./**/*.test.tsx"]
}
